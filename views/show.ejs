<!DOCTYPE html>
<html>
  <head>
    <%- include('./partials/head'); %>    
    <title>Product Details</title>
  </head>
  <body class="PD">
    <div class="nav">
      <div>
    <h1>Product Details</h1>
  </div>
  <div>
    <a href='/products' class="indexhead1"><i class="bi bi-house-fill"></i> Home</a>
    <a href="/products/customer" class="indexhead2"><i class="bi bi-bag-fill"></i></i> Cart</a>
  </div>
  </div>
    <div >
    <div style="color:white">
    <h3><%= data.name %></h3>
  </div>
  <div >
      <img src='<%= data.img %>' alt="" width="500px" height="auto">
    </div>
    <div style="color:white">
      Description: <%= data.description %>
    </div>
    <div style="color:white">
    <% if (data.qty === 0) 
    {%>
       <span class="out" >OUT OF STOCK </span>
    <%} else 
    {%>
      <span class="in" >Qty: <%= data.qty %> remaining</span>
        <form action="/products/addtocart/<%=pos%>?_method=PUT" method="POST">
        <!-- <button class="btn btn-success" name="qty" value="<%=data.qty-1%>" >BUY</button> -->
        <button class="btn btn-success" name="qty" value="AddToCart" >Add To Cart</button>  
      </form>
    <%}
    %>
      </div>
    

      <div class="row-start-1 col-start-2 col-span-2">
    <button class="btn btn-primary"><a href='/products/<%=pos%>/edit'>Edit</a></button>
    <form action='/products/<%=pos%>?_method=DELETE' method='POST'>
      <button class="btn btn-danger">Delete</button>
    </form>
  </div>
</div>
  </body>
</html>

